@model UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Şifre ve Bilgi Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="firstname">Ad</label>
                                <input type="text" class="form-control" asp-for="FirstName" id="firstname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="lastname">Soyad</label>
                                <input type="text" class="form-control" asp-for="LastName" id="lastname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="username">Kullanıcı Adı</label>
                                <input type="text" class="form-control" asp-for="UserName" id="username">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" asp-for="Email" id="email">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="password">Şifre</label>
                                <input type="text" class="form-control" asp-for="Password" id="password">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="passwordagain">Şifre Tekrar</label>
                                <input type="text" class="form-control" asp-for="ConfirmPassword" id="passwordagain">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-round">Bilgileri Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



