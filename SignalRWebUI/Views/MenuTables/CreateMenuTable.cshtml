@model CreateMenuTableViewModel

@{
    ViewData["Title"] = "CreateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Masa Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="menutablename">Masa Adı</label>
                                <input type="text" class="form-control" asp-for="Name" id="menutablename">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-round">Masayı Ekle</button>
                            <a href="/MenuTables/Index/" class="btn btn-danger btn-round">Değişikliklerden Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


