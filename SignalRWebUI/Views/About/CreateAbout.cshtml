@model CreateAboutViewModel

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımda Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="aboutimage">Fotoğraf Yolu</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="aboutimage">
                            </div>
                            <div class="form-group">
                                <label for="abouttitle">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" id="abouttitle">
                            </div>
                            <div class="form-group">
                                <label for="aboutdescription">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="aboutdescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-round">Hakkımda Yazısı Ekle</button>
                            <a href="/About/Index/" class="btn btn-danger btn-round">Değişikliklerden Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


