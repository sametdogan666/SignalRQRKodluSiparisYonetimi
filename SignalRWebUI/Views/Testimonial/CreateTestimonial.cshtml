@model CreateTestimonialViewModel

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Referans Yorum Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="FullName" id="name">
                            </div>
                            <div class="form-group">
                                <label for="title">Müşteri Ünvan</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="image">Müşteri Resim Yolu</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="image">
                            </div>
                            <div class="form-group">
                                <label for="comment">Müşteri Yorumu</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-round">Yorumu Ekle</button>
                            <a href="/Testimonial/Index/" class="btn btn-danger btn-round">Değişikliklerden Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



