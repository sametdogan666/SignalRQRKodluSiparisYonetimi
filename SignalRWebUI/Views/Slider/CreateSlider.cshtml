@model CreateSliderViewModel

@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="feauturetitle1">1. Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title1" id="feauturetitle1">
                            </div>
                            <div class="form-group">
                                <label for="featuredesc1">1. Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description1" id="featuredesc1">
                            </div>
                            <div class="form-group">
                                <label for="feauturetitle2">2. Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title2" id="feauturetitle2">
                            </div>
                            <div class="form-group">
                                <label for="featuredesc2">2. Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description2" id="featuredesc2">
                            </div>
                            <div class="form-group">
                                <label for="feauturetitle3">3. Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title3" id="feauturetitle3">
                            </div>
                            <div class="form-group">
                                <label for="featuredesc3">3. Açıklamayı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description3" id="featuredesc3">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-round">Öne Çıkan Alanı Ekle</button>
                            <a href="/Slider/Index/" class="btn btn-danger btn-round">Değişikliklerden Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

