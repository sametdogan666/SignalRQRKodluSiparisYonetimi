@model List<ResultCategoryViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kategori ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Durumu</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach(var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Status</td>
                                        <td><a href="/Category/DeleteCategory/@item.Id/" class="btn btn-outline-danger btn-round">Sil</a></td>
                                        <td><a href="/Category/UpdateCategory/@item.Id/" class="btn btn-outline-warning btn-round">Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/Category/CreateCategory/" class="btn btn-outline-primary btn-round">Yeni Kategori Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
