@model CreateContactViewModel

@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="contactlocation">Lokasyon</label>
                                <input type="text" class="form-control" asp-for="Location" id="contactlocation">
                            </div>
                            <div class="form-group">
                                <label for="contactphone">Telefon Numarası</label>
                                <input type="text" class="form-control" asp-for="PhoneNumber" id="contactphone">
                            </div>
                            <div class="form-group">
                                <label for="contactemail">Email Adresi</label>
                                <input type="email" class="form-control" asp-for="Email" id="contactemail">
                            </div>
                            <div class="form-group">
                                <label for="title">Alt Başlık</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="title">
                            </div>
                            <div class="form-group">
                                <label for="contactdescription">Alt Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="contactdescription"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="days">Açık Günler</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="days">
                            </div>
                            <div class="form-group">
                                <label for="descc">Açık Günler Açıklama</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="descc">
                            </div>
                            <div class="form-group">
                                <label for="hours">Açık Saatler</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="hours">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary btn-round">İletişim Bilgi Yazısı Ekle</button>
                            <a href="/Contact/Index/" class="btn btn-danger btn-round">Değişikliklerden Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

