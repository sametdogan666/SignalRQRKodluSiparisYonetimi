@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>No.1 Restaurant Kayıt</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib-regform-32/images/wall3.jpg" alt="form" style="height: 600px; width: 584px;">
            </div>
            <form class="form-detail" method="post">
                <h2>Yeni Kullanıcı Kaydı</h2>
                <div class="form-row">
                    <input type="text"  id="first-name" class="input-text" placeholder="Ad" required asp-for="FirstName">
                </div>
                <div class="form-row">
                    <input type="text"  id="full-name" class="input-text" placeholder="Soyad" required asp-for="LastName">
                </div>
                <div class="form-row">
                    <input type="text"  id="user-name" class="input-text" placeholder="Kullanıcı Adı" required asp-for="UserName">
                </div>
                <div class="form-row">
                    <input type="email"  id="your-email" class="input-text" placeholder="Email Adresi" required asp-for="Email">
                </div>
                <div class="form-row">
                    <input type="password" id="password" class="input-text" placeholder="Şifreniz" required asp-for="Password">
                </div>
                
                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="Kayıt Ol">
                </div>
            </form>
        </div>
    </div>
</body>
</html>